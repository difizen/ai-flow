{
  "extends": "../../tsconfig.base.json",
  
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@ai-flow/reactflow": ["src"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "noUnusedLocals": true
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.storybook.json"
    }
  ]
}
